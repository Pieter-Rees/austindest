# Environment Variables Template
# Copy this file to .env.local and update the values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Press Kit AD"
NEXT_PUBLIC_APP_DESCRIPTION="Modern press kit website built with Next.js 15"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Performance Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Security (Optional)
NEXT_PUBLIC_CSP_REPORT_URI=https://your-csp-report-endpoint
NEXT_PUBLIC_SECURITY_HEADERS=true

# Development Tools (Optional)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_PERFORMANCE_MONITOR=true

# Build Configuration
NEXT_PUBLIC_BUILD_VERSION=1.0.0
NEXT_PUBLIC_BUILD_DATE=2024-01-01

# API Configuration (if applicable)
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_API_VERSION=v1

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Third-party Services (Optional)
NEXT_PUBLIC_YOUTUBE_API_KEY=your-youtube-api-key
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your-spotify-client-id
NEXT_PUBLIC_SOUNDCLOUD_CLIENT_ID=your-soundcloud-client-id

# Database (if applicable)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis (if applicable)
REDIS_URL=redis://localhost:6379

# Email (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload (if applicable)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting (if applicable)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Keys (if applicable)
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# CDN Configuration (if applicable)
CDN_URL=https://cdn.your-domain.com
CDN_PREFIX=assets

# Cache Configuration (if applicable)
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Logging (if applicable)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Monitoring (if applicable)
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Development Tools
NEXT_PUBLIC_VERCEL_URL=your-vercel-url
NEXT_PUBLIC_NETLIFY_URL=your-netlify-url

# Testing (if applicable)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/test_database
TEST_REDIS_URL=redis://localhost:6379/1

# Docker (if applicable)
DOCKER_BUILDKIT=1
DOCKER_DEFAULT_PLATFORM=linux/amd64

# CI/CD (if applicable)
CI=true
GITHUB_ACTIONS=true
VERCEL=true
NETLIFY=true

# Environment-specific overrides
# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true

# Production
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_SHOW_PERFORMANCE_MONITOR=false

# Staging
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://staging.your-domain.com
# NEXT_PUBLIC_DEBUG_MODE=true
