{
  "name": "press-kit-ad",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "build:prod": "node scripts/build-prod.js",
    "build:analyze": "ANALYZE=true NODE_ENV=production next build",
    "build:compress": "find build -name '*.html' -o -name '*.css' -o -name '*.js' | xargs gzip -k -9 || true",
    "build:size": "du -sh build/ && find build -name '*.js' -exec wc -c {} + | sort -n | tail -10",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .next build node_modules/.cache",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm test:coverage && pnpm build",
    "validate": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "audit": "pnpm audit --audit-level moderate",
    "audit:fix": "pnpm audit --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-player": "^3.3.2",
    "react-scroll": "^1.9.3",
    "tailwindcss": "4.1.13",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-scroll": "^1.8.10",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "clsx": "^2.1.1",
    "cssnano": "^7.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
